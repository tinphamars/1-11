# ==========================================
# RAG Chatbot API Configuration
# ==========================================
# Copy this file to .env and update with your actual values
# This file is used by both Python and Docker Compose

# ==========================================
# üîë OpenAI Configuration (Required)
# ==========================================
OPENAI_API_KEY=your-key
OPENAI_MODEL=GPT-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_BASE_URL=https://aiportalapi.stu-platform.live/jpe
OPENAI_API_TYPE=openai

# ==========================================
# ‚öôÔ∏è Application Settings
# ==========================================
DEBUG=False
APP_NAME=RAG_Chatbot_API
APP_VERSION=1.0.0

# ==========================================
# üß† ChromaDB Settings
# ==========================================
# In Docker, this will be mapped to /app/chroma_db
CHROMA_DB_PATH=./chroma_db
COLLECTION_NAME=documents

# ==========================================
# üìÑ Document Folder Settings
# ==========================================
# Path to folder containing documents to load
DOCUMENTS_FOLDER=./documents
# Whether to load docs automatically on startup
AUTO_LOAD_ON_STARTUP=true

# ==========================================
# ü™Ñ Document Processing Settings
# ==========================================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_FILE_SIZE_MB=10

# ==========================================
# üîç RAG Settings
# ==========================================
RETRIEVAL_K=5
SIMILARITY_THRESHOLD=0.5

# ==========================================
# üí¨ Chat Settings
# ==========================================
MAX_CONVERSATION_LENGTH=10
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=1000

# ==========================================
# üìÇ Supported File Extensions
# ==========================================
SUPPORTED_EXTENSIONS=[".py",".md",".txt",".json",".yaml",".yml",".rst",".docx",".pdf"]
